/**
 * @fileoverview Firestore Security Rules for the Namo Vṛkṣebhyaḥ Donation Portal.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for the /users/{userId} collection.
 * Only the authenticated user with a matching userId can read or write their own document.
 * The `submissions` collection allows any authenticated user to create a new submission,
 * but only allows the designated admin user to read or list the submissions.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user documents. Only the authenticated user can read or write their own document.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow get: if isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
      allow list: if false;
    }

    /**
     * @description Controls access to form submissions.
     * @path /submissions/{submissionId}
     * @allow (create) - Any authenticated user can create a new submission.
     * @allow (read, list) - Only the admin user can read or list submissions.
     * @deny (update, delete) - No one can update or delete submissions from the client.
     */
    match /submissions/{submissionId} {
      allow create: if request.auth != null;
      allow read: if request.auth.token.email == 'grishi99@gmail.com';
      allow update, delete: if false;
    }

    match /submissions/{submissionId} {
        allow list: if request.auth.token.email == 'grishi99@gmail.com';
    }
  }
}
